<div class="mnemosphere-properties" style="display: none; padding: 5px">
    <div class="form-group">
        <label>Result to force on creation:</label>
        <div class="form-fields">
            <select name="mnemosphere-force-result" style="width: 100%">
                <option value=""></option>
                {{#each resultNames}}
                <option value="{{this}}" {{#if (eq this ../forceResult)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>Skill to include when rolling this table:</label>
        <div class="form-fields">
            <div class="ts-drop-zone" data-dtype="Item">
                {{#if addSkillDoc}}
                {{{addSkillDoc.link}}}
                <a data-action="clear-add-skill" class="ts-control-icon"><i class="fas fa-times-circle"></i></a>
                {{else}}
                <p class="notes">Drop a Skill Item here.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
