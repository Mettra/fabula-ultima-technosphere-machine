      "scripts/**/*.ts",
      "types/**/*.d.ts",
      "../systems/FoundryVTT-Fabula-Ultima/module/**/*.mjs"
    ],
    "typeAcquisition": {
      "include": ["jquery", "Handlebars"]
  }
}