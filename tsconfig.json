{    
      "compilerOptions": {
      "types": ["fvtt-types"],
      "target": "esnext",
      "module": "esnext",
      "outDir": "out",
      "sourceMap": true,
      "declaration": true,      
      "paths": {
        "fu-system/*": [
          "../systems/FoundryVTT-Fabula-Ultima/module/*"
        ]
      },
      "moduleResolution": "bundler"
    },
    "exclude": ["node_modules", "**/node_modules/*"],    
