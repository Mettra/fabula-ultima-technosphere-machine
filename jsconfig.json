{
    "compilerOptions": {
      "types": ["fvtt-types"],
      "target": "esnext",
      "moduleResolution": "bundler",
      "allowJs": true,
      "checkJs": true
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": [
      "scripts/**/*.js",
      "types/**/*.d.ts",
    ],
    "typeAcquisition": {
      "include": ["jquery", "Handlebars"]
  }
}